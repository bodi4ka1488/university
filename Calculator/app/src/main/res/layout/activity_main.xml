<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buAC"
            android:onClick="clickCancel"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:width="30pt"
            android:height="30pt"
            android:backgroundTint="@color/green"
            android:text="AC" />

        <Button
            android:id="@+id/buPlus"
            android:onClick="operation"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:width="30pt"
            android:height="30pt"
            android:backgroundTint="@color/green"
            android:text="+" />

        <Button
            android:id="@+id/buDivide"
            android:onClick="operation"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:width="30pt"
            android:height="30pt"
            android:backgroundTint="@color/green"
            android:text="/" />

        <Button
            android:id="@+id/buMultiply"
            android:onClick="operation"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:width="30pt"
            android:height="30pt"
            android:backgroundTint="@color/green"
            android:text="*" />
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="7" />

            <Button
                android:id="@+id/bu8"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="8" />

            <Button
                android:id="@+id/bu9"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="9" />

            <Button
                android:id="@+id/buMinus"
                android:onClick="operation"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="-" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu6"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="6" />

            <Button
                android:id="@+id/bu5"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="5" />

            <Button
                android:id="@+id/bu4"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="4" />

            <Button
                android:id="@+id/buEqual"
                android:onClick="clickEqual"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="=" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu3"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="3" />

            <Button
                android:id="@+id/bu2"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="2" />

            <Button
                android:id="@+id/bu1"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="1" />

            <Button
                android:id="@+id/bu0"
                android:onClick="ClickNumber"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/green"
                android:text="0" />
        </TableRow>



    </TableLayout>

</LinearLayout>